{
  "name": "calorie-tracker-mcp",
  "version": "1.0.0",
  "description": "MCP server for calorie tracking via Claude",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node --esm src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "lint:check": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json}'",
    "type-check": "tsc --noEmit",
    "check-all": "npm run type-check && npm run lint:check && npm run format:check",
    "fix-all": "npm run type-check && npm run lint && npm run format",
    "debug": "npm run build && npx @modelcontextprotocol/inspector node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "calorie-tracker",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@modelcontextprotocol/inspector": "^0.16.2",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@types/sqlite3": "^3.1.11",
    "sqlite3": "^5.1.7"
  }
}
